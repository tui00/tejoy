{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build and debug (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/debug/app",
      "args": [],
      "cwd": "${workspaceFolder}/bin/debug/",
      "preLaunchTask": "make debug",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Disable pagination",
          "text": "set pagination off",
          "ignoreFailures": true
        },
        {
          "description": "Pass SIGINT to program",
          "text": "handle SIGINT pass nostop",
          "ignoreFailures": false,
        }
      ]
    }
  ]
}